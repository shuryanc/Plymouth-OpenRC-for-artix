#!/bin/openrc-run

name=$RC_SVCNAME
description="Show Plymouth Boot Screen"
command="/usr/bin/plymouthd"
command_args="--mode=boot --pid-file=/run/plymouth/pid --attach-to-session"
pidfile="undefined"

depend() {
	before udev-trigger udev
}

stop() {
	/usr/bin/plymouthd --mode=boot --pid-file=/run/plymouth/pid --attach-to-session
}

